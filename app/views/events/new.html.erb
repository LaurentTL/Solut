<body style="background: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.8) 20%, rgba(0,0,0,0.4) 100%),url('https://images.unsplash.com/photo-1520242739010-44e95bde329e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80'); background-size: cover; min-height: 100vh; opacity: 0.88;">
<!-- <body> -->
  <div class="new-event-container">
      <h2 class="title-event">ADD AN EVENT</h2>
      <div class="new-form">
        <%= simple_form_for(@event) do |f| %>
          <%= f.input :title %>
          <%= f.input :location %>
          <%= f.input :capacity %>
          <%= f.input :event_type, collection: Event::TYPE_EVENT_ARRAY %>
          <%= f.input :genre, collection: Event::GENRE_ARRAY %>
          <%= f.input :instruments_array, label: 'Instruments needed', collection: Event::EVENT_INSTRUMENTS_ARRAY, as: :check_boxes, input_html: { multiple: true } %>
          <!-- <#%= f.submit "Create", class: "btn btn-secondary" %> -->
          <%= f.submit "CREATE", id: "events-new-btn" %>
        <% end %>
      </div>
  </div>
</body>






