<%= render 'shared/banner' %>

<div class="container my-4">
  <div class="cards my-3">
    <h3>List of events taking place</h3>
  </div>

  <div class="cards my-4">
    <% @events.each do |event| %>
      <!-- & is a shortcut to allow continuation of code even if not working (i.e. no image available) - alternative to if with true statement -->
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80')">
        <p><%= link_to event.name, event_path(event) %></p>
        <div>
          <i class="fas fa-trash"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
