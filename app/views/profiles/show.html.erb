<div class="content-wrapper">
  <body style="background: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.8) 20%, rgba(0,0,0,0.4) 100%),url('https://images.unsplash.com/photo-1505190849153-43410d3c18f8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2550&q=80'); background-size: cover; min-height: 100vh; opacity: 0.88;">
    <div class="container-profile-show">
      <h2 class="title-profile-show"><%= @user.nick_name.upcase %> PROFILS</h2>
      <div class="profile-content-show">
        <div class="first-profile-show">
          <% if @user.profile_picture.attached? %>
            <%= image_tag(@user.profile_picture, class: "edit-picture-profile", id: "editProfile") %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/dh8tpzykj/image/upload/v1582203695/avatar_empty_ghdihw.png", class: "edit-picture-profile", id: "editProfile" %>
          <% end %>
          <div class="first-row-show">
            <div class="show-profile-nickname">
              <% if @user.nick_name.nil? || @user.nick_name == "" %>
                <%= "Not renseigned" %>
              <% else %>
                <%= @user.nick_name %>
              <% end %>
            </div>
            <div class="show-profile-age">
              <% if @user.age.nil? || @user.age == "" %>
                <%= "Not renseigned" %>
              <% else %>
                age: <%= @user.age %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="second-profile-show">
          <div class="description-center-show">Description</div>
          <div class="description-text-show">
            <% if @user.description.nil? || @user.description == "" %>
              <%= "Not renseigned yet" %>
            <% else %>
              <%= @user.description %>
            <% end %>
          </div>
          <div class="description-center-show">Repertory</div>
          <div class="description-text-show">
            <% if @user.genre_preferences.nil? || @user.genre_preferences == "" %>
              <%= "Not renseigned yet" %>
            <% else %>
              <%= @user.genre_preferences  %>
            <% end %>
          </div>
        </div>
        <div class="third-profile-show">
          <!-- <div class="my-song">MY SONGS</div>
          <div class="my-media">MY VIDEOS</div> -->
          <div class="instrument-center-show">Instruments</div>
          <div class="instrument-profile-show">
            <div class="instrument-text-show">
              <% if @user.user_instruments.empty? %>
                <%= "empty" %>
              <% else %>
                <% @user.user_instruments.each do |instrument| %>
                  <%= instrument.instrument.name %> - (<%= instrument.proficiency %>)
                  <br />
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="instrument-center-show">Events created</div>
          <div class="instrument-profile-show">
            <div class="my-event-text-show">
              <% if @user.events.count == 0 %>
                <%= "empty" %>
                <% else %>
                  <% @user.events.each do |event| %>
                  <li>Event: <%= event.title %> (<%= event.event_type %>)</li>
                  <% end %>
              <% end %>
            </div>
          </div>
          <div class="instrument-center-show">Videos</div>
          <div class="instrument-profile-show">
<!--           <div class="instrument-text">
            <#% if @user.user_media.count == 0 %>
              <%#= "empty" %>
              <#% else %>
                <#% @user.user_media.each do |event| %>
                <li><%#= @user.user_media.title %> (<%#= @user.user_media.music_genre %> / <%#= @user.user_media.medium_type %>)</li>
                <#% end %>
            <#% end %>
          </div> -->
          </div>
          <div class="instrument-center-show">Songs</div>
          <div class="instrument-profile-show">
          </div>
  <!--         <div class="bottom-container-show">
            <#%= link_to "Back", :back, class: 'return_btn-show-profile' %>
          </div> -->
        </div>
      </div>
    </div>
  </body>
</div>
